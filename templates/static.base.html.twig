<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <link rel="dns-prefetch" href="//fontawesome.com">

        <script src="https://kit.fontawesome.com/631d12d129.js" crossorigin="anonymous"></script>

        <link id="theme-link" rel="stylesheet" href="/themes/theme.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('static') }}
        {% endblock %}
    </head>
    <body>
        <div id="static">

            <div class="container">
                <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                    <a href="{{ path('app_index') }}" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none fs-4">
                        XTB parser
                    </a>

<!--                    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                        <li><a href="/" class="nav-link px-2 link-dark">Home</a></li>
                        <li><a href="/jobs" class="nav-link px-2 link-dark">Jobs</a></li>
                    </ul>-->

                    <div class="col-md-3 text-end">
                        <a href="{{ path('app_index') }}" class="btn btn-outline-secondary btn-sm me-2">Home</a>
                        <a href="/u/login" class="btn btn-sm btn-outline-primary me-2">Login</a>
                        <a href="/u/register" class="btn btn-sm btn-primary">Sign-up</a>
                    </div>
                </header>
            </div>

            <div class="container">
                {% block pageTitle %}{% endblock %}

                {% block body %}
                {% endblock %}
            </div>

        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('static') }}
        {% endblock %}

    </body>
</html>
